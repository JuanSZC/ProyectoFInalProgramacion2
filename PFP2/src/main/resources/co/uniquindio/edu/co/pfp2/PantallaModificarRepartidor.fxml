<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="panelPrincipal" prefHeight="700.0" prefWidth="600.0" stylesheets="@../../../../../styles/paletaRoja.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.edu.co.pfp2.viewController.PantallaModificarRepartidorViewController">
   <children>
      <Text layoutY="65.0" text="Modificar Repartidor" textAlignment="CENTER" wrappingWidth="600.0">
         <font>
            <Font name="Segoe UI Bold Italic" size="45.0" />
         </font>
      </Text>
      <Text layoutX="50.0" layoutY="150.0" styleClass="label-text" text="Nombre:">
         <font>
            <Font name="Segoe UI Bold" size="18.0" />
         </font>
      </Text>
      <TextField fx:id="txtNombre" alignment="TOP_CENTER" layoutX="50.0" layoutY="170.0" prefHeight="40.0" prefWidth="500.0" stylesheets="@../../../../../styles/paletaRoja.css" />
      <Text layoutX="50.0" layoutY="240.0" styleClass="label-text" text="Correo:">
         <font>
            <Font name="Segoe UI Bold" size="18.0" />
         </font>
      </Text>
      <TextField fx:id="txtCorreo" alignment="TOP_CENTER" layoutX="50.0" layoutY="260.0" prefHeight="40.0" prefWidth="500.0" stylesheets="@../../../../../styles/paletaRoja.css" />
      <Text layoutX="50.0" layoutY="330.0" styleClass="label-text" text="Teléfono:">
         <font>
            <Font name="Segoe UI Bold" size="18.0" />
         </font>
      </Text>
      <TextField fx:id="txtTelefono" alignment="TOP_CENTER" layoutX="50.0" layoutY="350.0" prefHeight="40.0" prefWidth="500.0" stylesheets="@../../../../../styles/paletaRoja.css" />
      <Text layoutX="50.0" layoutY="420.0" styleClass="label-text" text="Contraseña:">
         <font>
            <Font name="Segoe UI Bold" size="18.0" />
         </font>
      </Text>
      <TextField fx:id="txtContrasena" alignment="TOP_CENTER" layoutX="50.0" layoutY="440.0" prefHeight="40.0" prefWidth="500.0" stylesheets="@../../../../../styles/paletaRoja.css" />
      <Text layoutX="50.0" layoutY="510.0" styleClass="label-text" text="Zona de Cobertura:">
         <font>
            <Font name="Segoe UI Bold" size="18.0" />
         </font>
      </Text>
      <ComboBox fx:id="cbZona" layoutX="50.0" layoutY="530.0" prefHeight="40.0" prefWidth="500.0" styleClass="button-primary" />
      <Button layoutX="150.0" layoutY="630.0" mnemonicParsing="false" onAction="#modificar" prefHeight="40.0" prefWidth="120.0" styleClass="button-dark" text="Guardar">
         <font>
            <Font name="Segoe UI Bold" size="16.0" />
         </font>
      </Button>
      <Button layoutX="330.0" layoutY="630.0" mnemonicParsing="false" onAction="#cancelar" prefHeight="40.0" prefWidth="120.0" styleClass="button-danger" text="Cancelar">
         <font>
            <Font name="Segoe UI Bold" size="16.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
