<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="panelPrincipal" prefHeight="720.0" prefWidth="720.0" stylesheets="@../../../../../styles/paletaRoja.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.uniquindio.edu.co.pfp2.viewController.PantallaBienvenidaViewController">

    <children>
        <!-- Panel lateral azul -->
        <Rectangle arcHeight="5.0" arcWidth="5.0" fill="#d38639" height="720.0" stroke="#d38639" styleClass="top-bar" width="352.0" />

        <!-- Texto principal -->
        <Text fill="WHITE" layoutX="20" layoutY="360" text="Bienvenido al Sistema" textAlignment="CENTER" wrappingWidth="320">
            <font>
                <Font name="Segoe UI Bold" size="48.0" />
            </font>
        </Text>

        <!-- Contenedor derecho -->
        <VBox alignment="CENTER" layoutX="417.0" layoutY="222.0" spacing="40">
            <children>
                    <Text styleClass="label-text" text="Comenzar como:" textAlignment="CENTER">
                    <font>
                        <Font name="Segoe UI Bold" size="30.0" />
                    </font>
                </Text>

                <Button onAction="#openPantallaSesionUsuario" prefHeight="40" prefWidth="180" styleClass="button-primary" stylesheets="@../../../../../styles/paletaAzul.css" text="Usuario" />
                <Button onAction="#openPantallaSesionRepartidor" prefHeight="40" prefWidth="180" styleClass="button-dark" stylesheets="@../../../../../styles/paletaVerde.css" text="Repartidor" />
                <Button onAction="#openPantallaSesionAdministrador" prefHeight="40" prefWidth="180" styleClass="button-danger" stylesheets="@../../../../../styles/paletaRoja.css" text="Administrador" />
            </children>
            <padding>
                <Insets top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
